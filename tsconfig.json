{
  "compilerOptions": {
    "importHelpers": true,
    "noEmitHelpers": true,
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"],
      "root/*": ["./package.json"]
    },
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/**/*"]
}
